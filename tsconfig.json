{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": false,
    "moduleResolution": "node",
	"allowSyntheticDefaultImports": true,
	"emitDecoratorMetadata": true,
	"experimentalDecorators": true,
    "baseUrl": "./src",
    "paths": {
      "shared/*": ["../../shared/src/*"]
    },
    "lib": ["dom", "es5", "es2015.promise"]
  },
}